# ==============================================
# SECURITY HEADERS FOR SAFI GROUP WEBSITE
# مجموعة الصافي - إعدادات الحماية
# ==============================================

# Enable mod_headers if available
<IfModule mod_headers.c>

    # ==============================================
    # 1. CONTENT SECURITY POLICY (CSP)
    # ==============================================
    # Restricts resource loading to trusted sources only
    # NOTE: Tailwind uses inline styles, so 'unsafe-inline' is required for style-src
    
    Header set Content-Security-Policy "\
        default-src 'self'; \
        script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://unpkg.com; \
        style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.tailwindcss.com; \
        font-src 'self' https://fonts.gstatic.com; \
        img-src 'self' data: https: blob:; \
        connect-src 'self' https://api.airtable.com; \
        frame-ancestors 'none'; \
        base-uri 'self'; \
        form-action 'self' https://wa.me; \
        upgrade-insecure-requests; \
    "

    # ==============================================
    # 2. X-FRAME-OPTIONS (Clickjacking Protection)
    # ==============================================
    # Prevents the site from being embedded in iframes
    Header always set X-Frame-Options "DENY"

    # ==============================================
    # 3. X-CONTENT-TYPE-OPTIONS (MIME Sniffing Protection)
    # ==============================================
    # Prevents browsers from MIME-sniffing responses
    Header always set X-Content-Type-Options "nosniff"

    # ==============================================
    # 4. X-XSS-PROTECTION (Legacy Browser Protection)
    # ==============================================
    # Enables XSS filtering for older browsers (modern browsers rely on CSP)
    Header always set X-XSS-Protection "1; mode=block"

    # ==============================================
    # 5. REFERRER-POLICY
    # ==============================================
    # Controls how much referrer information is sent
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # ==============================================
    # 6. PERMISSIONS-POLICY
    # ==============================================
    # Controls which browser features can be used
    Header always set Permissions-Policy "\
        geolocation=(), \
        microphone=(), \
        camera=(), \
        payment=(), \
        usb=(), \
        magnetometer=(), \
        gyroscope=(), \
        accelerometer=() \
    "

    # ==============================================
    # 7. STRICT-TRANSPORT-SECURITY (HSTS)
    # ==============================================
    # Forces HTTPS connections (only enable if using HTTPS)
    # Uncomment the line below ONLY if your site uses HTTPS
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # ==============================================
    # 8. CROSS-ORIGIN POLICIES
    # ==============================================
    # Prevent cross-origin information leaks
    Header always set Cross-Origin-Embedder-Policy "require-corp"
    Header always set Cross-Origin-Opener-Policy "same-origin"
    Header always set Cross-Origin-Resource-Policy "same-origin"

</IfModule>

# ==============================================
# FILE ACCESS RESTRICTIONS
# ==============================================

# Prevent access to sensitive files
<FilesMatch "^(\\.gitignore|\\.htaccess|SECURITY\\.md|server-config\\.md|airtable-config\\.js|product_manager\\.py)$">
    Require all denied
</FilesMatch>

# Prevent directory listing
Options -Indexes

# ==============================================
# CACHE CONTROL
# ==============================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML files - no cache for dynamic content
    ExpiresByType text/html "access plus 0 seconds"
    
    # CSS and JavaScript - 1 week
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    
    # Images - 1 month
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    
    # Fonts - 1 year
    ExpiresByType font/woff2 "access plus 1 year"
    
    # Manifest and service worker - no cache
    ExpiresByType application/manifest+json "access plus 0 seconds"
</IfModule>

# ==============================================
# CUSTOM ERROR PAGES (OPTIONAL)
# ==============================================
# ErrorDocument 404 /404.html
# ErrorDocument 403 /403.html
# ErrorDocument 500 /500.html

# ==============================================
# COMPRESSION (OPTIONAL - for better performance)
# ==============================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>
